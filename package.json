{
    "name": "react-ts-template",
    "version": "1.0.0",
    "description": "A opinionated template for React applications using TypeScript",
    "private": true,
    "scripts": {
        "start": "./scripts/start-server",
        "build": "webpack --config ./config/webpack.prod.config.js",
        "ts-lint": "eslint -c .eslintrc ./src/**/*.ts ./src/**/*.tsx",
        "css-lint": "stylelint ./src/**/*.css",
        "ts-lint:write": "eslint --fix -c .eslintrc ./src/**/*.ts ./src/**/*.tsx",
        "css-lint:write": "stylelint --fix ./src/**/*.css",
        "test:unit": "jest",
        "test:e2e": "./scripts/run-e2e",
        "test:e2e-dev": "cypress open",
        "test": "npm run test:unit && npm run test:e2e",
        "create-component": "./scripts/create-component"
    },
    "author": "De Voorhoede",
    "license": "ISC",
    "engines": {
        "node": ">=10"
    },
    "babel": {
        "presets": [
            "@babel/preset-react",
            [
                "@babel/preset-typescript",
                {
                    "isTSX": true,
                    "allExtensions": true
                }
            ],
            [
                "@babel/preset-env",
                {
                    "useBuiltIns": "usage"
                }
            ]
        ],
        "plugins": [
            "react-hot-loader/babel",
            "babel-plugin-macros"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "test && lint-staged"
        }
    },
    "lint-staged": {
        "*.(ts|tsx)": [
            "npm run ts-lint:write",
            "git add"
        ],
        "*.css": [
            "npm run css-lint:write",
            "git add"
        ]
    },
    "browserslist": "last 2 versions, ie 11",
    "dependencies": {
        "@babel/polyfill": "7.2.5",
        "react": "16.8.4",
        "react-dom": "16.8.4",
        "react-hot-loader": "4.8.0"
    },
    "devDependencies": {
        "@babel/core": "7.3.4",
        "@babel/preset-env": "7.3.4",
        "@babel/preset-react": "7.0.0",
        "@babel/preset-typescript": "7.3.3",
        "@graphql-codegen/core": "1.0.4",
        "@graphql-codegen/typescript": "1.0.4",
        "@graphql-codegen/typescript-operations": "1.0.4",
        "@graphql-codegen/typescript-react-apollo": "1.0.4",
        "@types/jest": "24.0.11",
        "@types/react": "16.8.7",
        "@types/react-dom": "16.8.2",
        "@typescript-eslint/eslint-plugin": "1.4.2",
        "@typescript-eslint/parser": "1.4.2",
        "apollo-client": "2.5.1",
        "autoprefixer": "9.5.0",
        "babel-eslint": "10.0.1",
        "babel-jest": "24.5.0",
        "babel-loader": "8.0.5",
        "babel-plugin-macros": "2.5.0",
        "camelcase": "5.2.0",
        "chalk": "2.4.2",
        "clean-webpack-plugin": "2.0.0",
        "connect": "3.6.6",
        "connect-history-api-fallback": "1.6.0",
        "copy-webpack-plugin": "5.0.1",
        "css-loader": "2.1.1",
        "cypress": "3.2.0",
        "dotenv": "7.0.0",
        "dotenv-webpack": "1.7.0",
        "eslint": "5.3.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-prettier": "4.1.0",
        "eslint-import-resolver-webpack": "0.11.0",
        "eslint-loader": "2.1.2",
        "eslint-plugin-import": "2.16.0",
        "eslint-plugin-jsx-a11y": "6.2.1",
        "eslint-plugin-prettier": "3.0.1",
        "eslint-plugin-react": "7.12.4",
        "eslint-plugin-react-hooks": "1.5.1",
        "file-loader": "3.0.1",
        "fork-ts-checker-webpack-plugin": "1.0.0",
        "graphql": "14.1.1",
        "graphql-toolkit": "0.2.8",
        "graphql.macro": "1.3.5",
        "html-webpack-plugin": "4.0.0-beta.5",
        "husky": "1.3.1",
        "jest": "24.5.0",
        "kebab-case": "1.0.0",
        "lint-staged": "8.1.5",
        "mini-css-extract-plugin": "0.5.0",
        "optimize-css-assets-webpack-plugin": "5.0.1",
        "pascal-case": "2.0.1",
        "postcss": "7.0.14",
        "postcss-loader": "3.0.0",
        "prettier": "1.16.4",
        "react-apollo": "2.5.3",
        "react-dev-utils": "8.0.0",
        "react-error-overlay": "5.1.4",
        "serve-static": "1.13.2",
        "snake-case": "2.1.0",
        "style-loader": "0.23.1",
        "stylelint": "9.10.1",
        "stylelint-config-prettier": "5.0.0",
        "stylelint-config-standard": "18.2.0",
        "stylelint-prettier": "1.0.6",
        "stylelint-webpack-plugin": "0.10.5",
        "svg-sprite-loader": "4.1.3",
        "tapable": "1.1.1",
        "terser-webpack-plugin": "1.2.3",
        "typed-css-modules": "0.4.2",
        "typescript": "3.3.3333",
        "typings-for-css-modules-loader": "1.7.0",
        "url-loader": "1.1.2",
        "webpack": "4.29.6",
        "webpack-bundle-analyzer": "3.1.0",
        "webpack-cli": "3.2.3",
        "webpack-dev-server": "3.2.1",
        "webpack-merge": "4.2.1"
    }
}
