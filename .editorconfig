# [editorconfig.org](http://editorconfig.org)
# Defines the coding style for different editors and IDEs.

# This is the top-most EditorConfig file
root = true

[*]
charset = utf-8

# Unix-style newlines with a newline ending every file
end_of_line = lf
insert_final_newline = true

# Indentation
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Don't trim whitespace because of double space <br/> thing in Markdown
[*.md]
trim_trailing_whitespace = false

# JSON prefers 2 spaces
[*.json]
indent_style = space
indent_size = 4

# Lint settings are in JSON, so
[.eslintrc]
indent_style = space
indent_size = 2
